{% extends 'frontend.html.twig' %}

{% block bloquecentral %}
   {{ parent() }}


   {# Termas  #}
 {{ include("includes/breadcrumb/menuprincipal.html.twig", {menufinal: 'Termas'}) }}

   <div class="container-fluid mt-2 mb-5 bg-light"  style="font-size:12px;">

      {% if provincia == '%'  %}
      <h2 class="mt-3">Termas en Argentina</h2>
      {% else %}
         <h2 class="mt-3">Termas en {{ provincia  }}</h2>
      {% endif %}       

      {% set i = 0  %}
      {% for termas in ppp2  %}
         <div class="justify-content-center bg-info mt-3 mb-5 p-3" align="">
            <div class="row p-3">
               <div class="col-md-4">
                  <img  class="img-fluid mb-3" src="{{ asset( fotos[i] ~ '.jpg', 'imgtermas' ) }}" border="0" alt="{{ termas.nombre }}" align="right" style="border-left: 1px solid #FF0000; border-bottom: 1px solid #FF0000;" />      
               </div>
               <div class="col-md-8">
                  <span class="btn btn-dark mb-2" role="button"><strong>{{ termas.nombre }}</strong></span><br>
                  <span  class="ml-3">{{ termas.direccion }}</span><br>
                  <span  class="ml-3"> {{ termas.localidad }} {{ ' (' ~ termas.provincia ~ ')' }} </span>
               </div> 
            </div>
            <div class="row p-3">
               {{ termas.descripcion | raw }}
            </div> 
         </div> 
         {% set i = i + 1  %}
      {% endfor %}

      <div align="center">
         <div class="col-md-4 pt-0 justify-content-center text-light bg-info" >
            <a href="{{ path('termas') }}" class="list-group-item list-group-item-action text-light bg-info py-1" title="Realizar Nueva Búsqueda">Realizar Nueva Búsqueda</a>
         </div> 
      </div> 
   </div>

{% endblock %}
